{
    "name": "richardtin/php-unit-test-example",
    "description": "A boilerplate project for PHP + Unit Test",
    "type": "project",
    "require-dev": {
        "phpunit/phpunit": "^6.4",
        "mockery/mockery": "^1.0",
        "phpro/grumphp": "^1.13",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Richard Ting",
            "email": "richard.tin@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    }
}
